#!/usr/bin/env bash

export TERMEX_DIR="$(dirname "$(dirname "$(readlink -f "$0")")")"
export TERMEX="$(cat "$TERMEX_DIR/version.txt")"

export PATH="$TERMEX_DIR/lib:$PATH"

if [ -t 1 ]
then
    ncolors=$(tput colors)
    
    if [ -n "$ncolors" ] && [ $ncolors -ge 8 ]
    then
        export bold="$(tput bold)"
        export underline="$(tput smul)"
        export standout="$(tput smso)"
        export normal="$(tput sgr0)"
        export black="$(tput setaf 0)"
        export red="$(tput setaf 1)"
        export green="$(tput setaf 2)"
        export yellow="$(tput setaf 3)"
        export blue="$(tput setaf 4)"
        export magenta="$(tput setaf 5)"
        export cyan="$(tput setaf 6)"
        export white="$(tput setaf 7)"
    fi
fi

function warn()
{
    echo "${yellow}WARN:$normal" "$@" >&2
}

function err()
{
    echo "${red}ERROR:$normal" "$@" >&2
}

function die()
{
    local err=$?
    if [ $1 -eq $1 ] &> /dev/null
    then
        err=$1
        shift
    fi
    err "$@"
    exit $err
}

function dbg()
{
    local debugs
    IFS="," read -ra debugs <<< "$1"
    
    for debug in "${debugs[@]}"
    do
        local channels
        IFS="," read -ra channels <<< "$DEBUG"
        
        for channel in "${channels[@]}"
        do
            if [[ ${channel} == ${debug} ]]
            then
                echo -e "$blue$debug$normal\t${@:2}"
            fi
        done
    done
}

function array()
{
    source /dev/stdin << eof
$1=( "\${@:2}" )

function $1.index()
{
    seq -l \${#$1[@]}
}

function $1.each()
{
    $1.index | while read i; do eval "\"\$1\" \"\${$1[\$i]}\" \$i"; done
}
eof
    if [ "$1" == "argv" ]
    then
        source /dev/stdin << eof
function $1.shift()
{
    eval "$1=( \"\${$1[0]}\" \"\\\${$1[@]:\$((\${1:-1}+1))}\" )"
}
eof
    else
        source /dev/stdin << eof
function $1.shift()
{
    eval "$1=( \"\\\${$1[@]:\${1:-1}}\" )"
}
eof
    fi
}

array argv "$@"
shift

function exit()
{
    local err=${1:-$?}
    dbg termex "Status code: $err"
    builtin exit $err
}

dbg termex "Termex initialized"

if [ "${#argv[@]}" -ge 1 ]
then
    if [ -f "${argv[0]}" ]
    then
        dbg termex "Running script..."
        . "${argv[0]}"
    else
        die 1 "Script does not exist!"
    fi
elif [ -f "/dev/stdin" ]
then
    dbg termex "Running from stdin..."
    . /dev/stdin
else
    dbg termex "Running Termex CLI..."
    while read -p "(termex) $PWD\$ " cmd
    do
        eval "$cmd"
    done
fi

exit
